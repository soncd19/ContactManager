<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/padding_bottom"
    android:layout_marginLeft="@dimen/padding_bottom"
    android:layout_marginRight="@dimen/padding_bottom"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="5dip">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/list_item_article_thumbnail"
            android:layout_height="@dimen/list_item_article_thumbnail"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true" />

        <LinearLayout
            android:id="@+id/list_item_name_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/avatar"
            android:text="none"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:orientation="vertical"
            android:layout_marginLeft="15dip"
            android:layout_alignBottom="@id/avatar">

            <TextView
                android:id="@+id/name_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="none"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/number_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="none"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/action_block"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_width"
            android:layout_alignParentRight="true"
            android:layout_below="@id/avatar"
            android:src="@drawable/ic_lock_open"
            style="?android:attr/borderlessButtonStyle"
            android:tint="@color/action_block"/>

        <ImageButton
            android:id="@+id/action_delete"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_width"
            android:layout_toLeftOf="@id/action_block"
            android:layout_below="@id/avatar"
            android:src="@drawable/ic_delete_list_contacts"
            style="?android:attr/borderlessButtonStyle"
            android:tint="@color/button_grey"/>

        <ImageButton
            android:id="@+id/action_edit"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_width"
            android:layout_toLeftOf="@id/action_delete"
            android:layout_below="@id/avatar"
            android:src="@drawable/ic_edit"
            style="?android:attr/borderlessButtonStyle"
            android:tint="@color/action_edit"/>

        <ImageButton
            android:id="@+id/action_sms"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_width"
            android:layout_toLeftOf="@id/action_edit"
            android:layout_below="@id/avatar"
            android:src="@drawable/ic_message"
            style="?android:attr/borderlessButtonStyle"
            android:tint="@color/action_message"/>

        <ImageButton
            android:id="@+id/action_call"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_width"
            android:layout_toLeftOf="@id/action_sms"
            android:layout_below="@id/avatar"
            android:src="@drawable/ic_phone"
            style="?android:attr/borderlessButtonStyle"
            android:tint="@color/red_color"/>

        <ImageButton
            android:id="@+id/action_favorite"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_width"
            android:layout_toLeftOf="@id/action_call"
            android:layout_below="@id/avatar"
            android:src="@drawable/ic_un_favorite"
            style="?android:attr/borderlessButtonStyle"
            android:tint="@color/action_favorite"/>






    </RelativeLayout>

</android.support.v7.widget.CardView>